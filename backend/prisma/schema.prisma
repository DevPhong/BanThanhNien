generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PeriodType {
  WEEK
  MONTH
  QUARTER
  YEAR
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  role      Role      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt

  profile        Profile?
  session        Session[]
  scoreSummary   ScoreSummary[]
  score          Score[]
  passwordResets PasswordReset[]
}

model Profile {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  fullName    String
  dateOfBirth DateTime?
  phone       String
  avatarUrl   String?
  joinDate    DateTime? @default(now())
  address     String
  note        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Score {
  id         Int      @id @default(autoincrement())
  userId     Int
  totalScore Float
  comment    String?
  scoreDate  DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
}

model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique @db.VarChar(255)
  userId    Int
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScoreSummary {
  id          Int        @id @default(autoincrement())
  userId      Int
  user        User       @relation(fields: [userId], references: [id])
  periodType  PeriodType @default(WEEK)
  periodLabel String
  totalScore  Float
  rank        Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model PasswordReset {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
